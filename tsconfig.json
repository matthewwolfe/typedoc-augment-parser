    "baseUrl": "src",
    "declaration": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "paths": {
      "@pkg/*": ["*"]
    }
